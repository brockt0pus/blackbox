#:kivy 1.10.0
#:set black (0, 0, 0, 1)
#:set grey (0.31, 0.31, 0.30, 1)
#:set red (0.95, 0.37, 0.36, 1)
#:set yellow (1, 0.88, 0.4, 1)
#:set blue (0.14, 0.48, 0.63, 1)
#:set green (0.43, 0.75, 0.70, 1)
#:set white (1, 1, 1, 1)

<Space>:
    # Make sure that spaces are always square
    height: self.width
    size_hint_y: None
    background_color: grey
    font_size: '20dp'

    on_release: root.press(self.id)

<Marker>:
    # Make sure that spaces are always square
    height: self.width
    size_hint_y: None
    background_color: 0.7, 0.7, 0.7, 0.7
    font_size: '20dp'
    index: 1

    on_press: root.press(self.id, 'press')
    on_release: root.press(self.id, 'release')

<Empty>:
    height: self.width
    size_hint_y: None
    background_color: 0.7, 0.7, 0.7, 0.7
    disabled: True
    background_disabled_normal: 'atlas://assets/defaulttheme/button'

<Tracker>:
    text: '@'
    color: white
    font_size: '24dp'

<MenuButton@Button>
    background_color: 0, 0, 0, 0
    size_hint: 1, 0.8
    font_size: '24dp'

<MenuScreen>:
    name: 'menu_screen'
    BoxLayout:
        orientation: 'vertical'
        orientation: 'vertical'

        Label:
            text: 'b l a c k b o x'
            font_size: '32dp'
            size_hint: 1, 2
        MenuButton:
            text: 'start'
            on_release: root.manager.current = 'game_screen'
        MenuButton:
            text: 'how?'
            on_release: root.manager.current = 'instruct_screen'
        Label:
            text: ''
            size_hint: 1, 0.5

<GameScreen>:
    name: 'game_screen'
    id: game_screen

    BoxLayout:
        orientation: 'vertical'
        id: game_layout

        # Score
        Label:
            id: score
            font_size: '48dp'
            text: '0'
            size_hint_y: 0.25

        # Game board
        GridLayout:
            id: board
            cols: 10
            rows: 10
            padding: root.width / root.height * 40

        # End game button
        BoxLayout:
            size_hint_y: 0.15

            Label:
            Button:
                id: end_button
                size_hint_x: 4
                text: 'submit'
                background_color: grey
                opacity: 0
                disabled: True
                on_release: root.end_game()
            Label:

        # Guess tracker
        BoxLayout:
            id: guessbar
            padding: 20, 0
            size_hint_y: 0.15

            Tracker:
                id: tracker1
            Tracker:
                id: tracker2
            Tracker:
                id: tracker3
            Tracker:
                id: tracker4
            Tracker:
                id: tracker5

        Label:
            size_hint_y: 0.1

<EndScreen>:
    name: 'end_screen'
    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 0.7
            id: end_score
            font_size: '62dp'

        Button:
            id: play_again
            background_color: black
            size_hint_y: 0.15
            text: 'play again?'

            on_press: root.reset()
            on_release: app.sm.current = 'game_screen'
        Label:
            size_hint_y: 0.25

<Page@BoxLayout>
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: black
        Rectangle:
            pos: self.pos
            size: self.size

<NextPage@Button>
    text: 'Got it.'
    background_color: black

<Instructions@Label>
    text_size: root.width/1.3, None

<InstructionScreen>:
    name: 'instruct_screen'

    PageLayout:
        id: page_layout
        border: 0

        Page:
            Instructions:
                text: root.objective_text1
            Instructions:
                text: root.objective_text2
            NextPage:
                on_press: root.ids.page_layout.page += 1

        Page:
            Instructions:
                text: root.hit_text1
            Instructions:
                text: root.hit_text2
            NextPage:
                on_press: root.ids.page_layout.page += 1

        Page:
            Instructions:
                text: root.detour_text
            NextPage:
                on_press: root.ids.page_layout.page += 1

        Page:
            Instructions:
                text: root.reflection_text1
            Instructions:
                text: root.reflection_text2
            NextPage:
                on_press: root.ids.page_layout.page += 1

        Page:
            Instructions:
                text: root.reflection2_text1
            Instructions:
                text: root.reflection2_text2
            NextPage:
                on_press: root.ids.page_layout.page += 1

        Page:
            Instructions:
                text: root.miss_text1
            Instructions:
                text: root.miss_text2
            NextPage:
                on_press: root.manager.current = 'game_screen'

        Page:
            Instructions:
                text: root.scoring_text1
            Instructions:
                text: root.scoring_text2
            Button:
                text: 'I\'m ready.'
                size_hint_y: 0.1
                on_press:  root.manager.current = 'menu_screen'
